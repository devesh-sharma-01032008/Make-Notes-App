<resources>
    <!-- Base application theme. -->
    <style name="Theme.MakeNotes" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#0020EE</item>
        <item name="colorPrimaryVariant">#1048EE</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#6075E6</item>
        <item name="colorSecondaryVariant">#566EF5</item>
        <item name="colorOnSecondary">#FFFFFF</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimaryContainer</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.MakeNotes.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.MakeNotes.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MakeNotes.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>